{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "noImplicitAny": false,
    //    "allowJs": true,
    //    "skipLibCheck": true,
    //    "forceConsistentCasingInFileNames": true,
    //    "noEmit": true,
    "esModuleInterop": true,
    //    "resolveJsonModule": true,
    //    "isolatedModules": true,
    //    "incremental": true,

    "moduleResolution": "Node",
    "target": "ES2016",
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules",
    "prisma/generated",
  ]
}
